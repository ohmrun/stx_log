package stx.log.body;


class Logs{
  static public function positioned(log:Log,p:Predicate<Pos,LogFailure>):Log{
    return function(v:Dynamic,?pos:Pos){
      if(!p.applyI(pos).is_defined()){
        //pos.customParams = null;
        log(v,pos);
      }
    }
  }
  static public function use(log:Log,fn:Dynamic->Dynamic):Log{
    return function(x:Dynamic,?pos:Pos){
      log(fn(x),pos);
    }
  }
  static public function containing(log:Log,p:Predicate<Dynamic,LogFailure>):Log{
    return function(v:Dynamic,?pos:Pos){
      if(!p.applyI(v).is_defined()){
        log(v,pos);
      }
    }
  }
  @:noUsing static public function levelled(log,level:Level):Log{
    return positioned(log,
      new stx.log.body.log.term.LevelledLog(level)
    ).use(
      function(x){
        var lvl = level.toString();
        var val = Show.show(x);
        return '$lvl: $val';
      }
    );
  }
}
